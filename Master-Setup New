```yaml
name: Build Android APK/AAB

on:
  push:
    branches: [ main, master ]
  pull_request:
    branches: [ main, master ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v4

    - name: Setup Node.js
      uses: actions/setup-node@v4
      with:
        node-version: '18'
        cache: 'yarn'

    - name: Setup Java JDK
      uses: actions/setup-java@v4
      with:
        java-version: '17'
        distribution: 'adopt'

    - name: Setup Android SDK
      uses: android-actions/setup-android@v3

    - name: Install dependencies
      run: |
        cd frontend
        yarn install --frozen-lockfile

    - name: Build React app
      run: |
        cd frontend
        yarn build

    - name: Sync Capacitor
      run: |
        cd frontend
        npx cap sync android

    - name: Grant execute permission for gradlew
      run: chmod +x frontend/android/gradlew

    - name: Build Debug APK
      run: |
        cd frontend/android
        ./gradlew assembleDebug

    - name: Build Release APK
      run: |
        cd frontend/android
        ./gradlew assembleRelease

    - name: Build Release AAB (Google Play)
      run: |
        cd frontend/android
        ./gradlew bundleRelease

    - name: Upload Debug APK
      uses: actions/upload-artifact@v4
      with:
        name: focosem-covoyage-debug.apk
        path: frontend/android/app/build/outputs/apk/debug/app-debug.apk

    - name: Upload Release APK
      uses: actions/upload-artifact@v4
      with:
        name: focosem-covoyage-release.apk
        path: frontend/android/app/build/outputs/apk/release/app-release-unsigned.apk

    - name: Upload Release AAB (Google Play Store)
      uses: actions/upload-artifact@v4
      with:
        name: focosem-covoyage-release.aab
        path: frontend/android/app/build/outputs/bundle/release/app-release.aab

    - name: Build Summary
      run: |
        echo "üéâ FOCOSEM CoVoyage Build Completed Successfully!"
        echo "üì± APK and AAB files are ready for download"
        echo "üè™ Ready for Google Play Store submission"
